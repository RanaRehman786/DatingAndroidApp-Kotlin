<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cr_person_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/circle_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="mario"
        android:textColor="@color/gray2"
        android:textSize="18dp"
        app:layout_constraintLeft_toRightOf="@+id/cr_person_img"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_discription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="supervisor"
        android:textColor="@color/gray1"
        android:textSize="14dp"
        app:layout_constraintLeft_toRightOf="@+id/cr_person_img"
        app:layout_constraintTop_toBottomOf="@+id/person_name" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_cross"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:elevation="6dp"
        android:src="@drawable/close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_love"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:elevation="6dp"
        android:src="@drawable/love"
        android:textColor="@color/gray1"
        app:layout_constraintRight_toLeftOf="@+id/ic_cross"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>