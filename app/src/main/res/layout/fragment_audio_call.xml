<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.VedioCallFragment">
        <ImageView
            android:id="@+id/iv_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_black_arrow"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call"
            android:textSize="18dp"
            android:padding="10dp"
            android:textColor="@color/gray2"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ci_call_dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/circle_img"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_call"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/online_ic"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toRightOf="@+id/ci_call_dp"
            app:layout_constraintBottom_toBottomOf="@+id/ci_call_dp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_caller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="18dp"
            android:textColor="@color/gray2"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ci_call_dp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_calling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="calling"
            android:textSize="12dp"
            android:textColor="@color/gray1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_caller_name"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btn_reject"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/reject_ic"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/white_circle_acall"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/white_circle_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/white_circle"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/speaker"
            app:layout_constraintTop_toTopOf="@+id/white_circle_speaker"
            app:layout_constraintLeft_toLeftOf="@+id/white_circle_speaker"
            app:layout_constraintRight_toRightOf="@+id/white_circle_speaker"
            app:layout_constraintBottom_toBottomOf="@+id/white_circle_speaker"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/white_circle_acall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/white_circle"
            android:layout_marginBottom="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_acall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/whitevcall"
            app:layout_constraintTop_toTopOf="@+id/white_circle_acall"
            app:layout_constraintLeft_toLeftOf="@+id/white_circle_acall"
            app:layout_constraintRight_toRightOf="@+id/white_circle_acall"
            app:layout_constraintBottom_toBottomOf="@+id/white_circle_acall"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/white_circle_mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/white_circle"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mute"
            app:layout_constraintTop_toTopOf="@+id/white_circle_mute"
            app:layout_constraintLeft_toLeftOf="@+id/white_circle_mute"
            app:layout_constraintRight_toRightOf="@+id/white_circle_mute"
            app:layout_constraintBottom_toBottomOf="@+id/white_circle_mute"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>